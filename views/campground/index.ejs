<% layout('layouts/boilerplate.ejs') %>

<h1 class="text-center mb-3">All Campground</h1>
<div id="map" style="width: 100%; height: 300px"></div>

<ul>
  <% for (const campground of campgrounds) { %>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <% if(campground.images.length){ %>
        <img class="img-fluid" src="<%= campground.images[0].url %>" alt="" />
        <% }else { %>
        <img
          crossorigin="anonymous"
          class="img-fluid"
          src="https://res.cloudinary.com/dnjizwian/image/upload/v1666410971/MyCamp/hxznprwr1vnwomr2s2s1.jpg"
          alt=""
        />
        <% } %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= campground.title %></h5>
          <p class="card-text"><%= campground.desc %></p>
          <p class="card-text">
            <small class="text-muted"><%= campground.location %></small>
          </p>
          <a class="btn btn-primary" href="/campgrounds/<%= campground._id %> "
            >View <%= campground.title %></a
          >
        </div>
      </div>
    </div>
  </div>
  <% } %>
</ul>
<script>
  const tokenMBX = "<%- process.env.MAPBOX_TOKEN  %>";
  const campgrounds = { features : <%- JSON.stringify(campgrounds) %>
  }
</script>
<script src="/javascript/mapCluster.js"></script>
