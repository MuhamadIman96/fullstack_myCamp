<% layout('layouts/boilerplate.ejs') %>

<div>
  <a href="/campgrounds/<%= campgrounds._id %> ">Back to Campground</a>
</div>

<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3 mt-2">
    <form
      action="/campgrounds/<%= campgrounds._id %>?_method=PUT"
      method="post"
      novalidate
      class="form-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          id="title"
          name="campground[title]"
          type="text"
          value="<%= campgrounds.title %>"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">location</label>
        <input
          class="form-control"
          id="location"
          name="campground[location]"
          type="text"
          value="<%= campgrounds.location %>"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            name="campground[price]"
            value="<%= campgrounds.price %>"
            id="price"
            type="text"
            class="form-control"
            placeholder="0"
            aria-label="price"
            aria-describedby="price-label"
            required
          />
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="desc">Description</label>
        <textarea
          class="form-control"
          id="desc"
          name="campground[desc]"
          type="text"
          required
        >
<%= campgrounds.desc %></textarea
        >
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Add Image</label>
        <input
          class="form-control"
          id="image"
          name="image"
          type="file"
          required
          multiple
        />
      </div>
      <div class="mb-3">
        <% campgrounds.images.forEach(function(img , i){ %>
        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="" />
        <div class="form-check-inline">
          <input
            type="checkbox"
            id="image-<%= i %>"
            name="deleteImages[]"
            value="<%= img.filename %>"
          />
          <label for="image-<%= i %> ">Delete</label>
        </div>
        <% }) %>
      </div>

      <div class="mb-3">
        <button class="btn btn-info">Edit Campground</button>
      </div>
    </form>
  </div>
</div>
